{{>layout/header}}

<h1>게시글 {{post.id}}번</h1>

<br/>
<div class="col-md-12">
    <div class="col-md-4">

        <div class="form-group">
            <label for="title"><h3>제목</h3></label>
            <p>{{post.title}}</p>
        </div>
        <div class="form-group">
            <label for="author"><h3>작성자</h3></label>
            <p>{{post.author}}</p>
        </div>
        <div class="form-group">
            <label for="content"><h3>내용</h3></label>
            <p>{{post.content}}</p>
        </div>

        <br/>
        <div class="card-header bi bi-chat-right-dots"> Write a Comment</div>
        {{! 댓글작성 부분}}
        <form>
                <div class="card-body">
                    <p id="postId">{{post.id}}</p>
                    <textarea id="comment" class="form-control" rows="4" placeholder="댓글을 입력하세요"></textarea>
                </div>
                <div class="card-footer">
                    <button type="button" id="btn-comment-save"class="btn btn-secondary">등록</button>
                </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
    </div>
</div>

{{>layout/footer}}